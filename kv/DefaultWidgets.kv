<Writable>:
    font_name: app.get_font_name()
    font_size: app.get_font_size()
    font_size_scale: 1

<DefaultLabel>:
    background_color: app.get_color("orange_rgba")
    border_color: app.get_color("darkgrey_rgba")
    color: app.get_color("darkgrey_rgba")
    text_size: self.width - 20, self.height - 20
    valign: "center"
    halign: "center"

<DefaultButton>:
    background_normal: ""
    background_color: app.get_color("blue_rgba")
    color: app.get_color("white_rgba")
    text_size: self.size
    multiline: True
    valign: "center"
    halign: "center"

<SelectionButton>:
    bk_active: app.get_color("green_rgba")
    bk_inactive: app.get_color("blue_rgba")

<DefaultTextInput>:
    multiline: True
    write_tab: False
    valign: "top"
    halign: "left"

<DefaultScrollView>:
    do_scroll_x: False
    do_scroll_y: True
    bar_color: app.get_color("darkgrey_rgba")
    bar_width: 8
    scroll_type: ["bars", "content"]