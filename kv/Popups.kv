<ErrorPopup>:
    title: "ERRORE"
    title_size: FONT_SIZE
    title_align: "center"
    size_hint: 0.3, 0.5
    auto_dismiss: False
    title_color: RED_RGBA
    separator_color: 1, 1, 1, 0

    FloatLayout:
        id: container_layout
        size: root.size

        DefaultLabel:
            id: lbl_error
            background_color: RED_RGBA
            font_size_scale: 0.7
            color: WHITE_RGBA
            size_hint_y: 0.64
            pos_hint: {"x": 0, "y": 0.35}

        DefaultButton:
            text: "RIPROVA"
            font_size_scale: 1.3
            size_hint_y: 0.3
            pos_hint: {"x": 0, "y": 0}
            on_release:
                root.exec_function()


<SingleChoicePopup>:
    size_hint: 0.25, 0.5
    auto_dismiss: False

    FloatLayout:
        DefaultLabel:
            id: lbl_info
            size_hint: 0.9, 0.55
            pos_hint: {"x": 0.05, "y": 0.4}

        DefaultButton:
            text: "OK"
            font_size_scale: 1.5
            size_hint: 0.55, 0.25
            pos_hint: {"x": 0.225, "y": 0.05}
            on_release:
                root.exec_function()


<DoubleChoicePopup>:
    size_hint: 0.25, 0.5
    auto_dismiss: False

    FloatLayout:
        DefaultLabel:
            id: lbl_info
            font_size_scale: 0.8
            size_hint: 0.9, 0.65
            pos_hint: {"x": 0.05, "y": 0.3}

        DefaultLayout:
            orientation: "horizontal"
            pos_hint: {"x": 0.05, "y": 0.05}
            size_hint: 0.9, 0.25

            DefaultButton:
                text: "ANNULLA"
                font_size_scale: 0.8
                on_release:
                    root.exec_second_function()

            DefaultButton:
                text: "OK"
                font_size_scale: 0.8
                on_release:
                    root.exec_function()