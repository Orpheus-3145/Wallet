<Writable>:
    font_name: FONT_NAME
    font_size: FONT_SIZE
    font_size_scale: 1

<DefaultLabel>:
    background_color: ORANGE_RGBA
    border_color: DARKGREY_RGBA
    color: DARKGREY_RGBA
    text_size: self.width - 20, self.height - 20
    valign: "center"
    halign: "center"

<DefaultButton>:
    background_normal: ""
    background_color: BLUE_RGBA
    color: WHITE_RGBA
    text_size: self.size
    multiline: True
    valign: "center"
    halign: "center"

<SelectionButton>:
    bk_active: GREEN_RGBA
    bk_inactive: BLUE_RGBA

<DefaultTextInput>:
    multiline: True
    write_tab: False
    valign: "top"
    halign: "left"

<DefaultScrollView>:
    do_scroll_x: False
    do_scroll_y: True
    bar_color: DARKGREY_RGBA
    bar_width: 8
    scroll_type: ["bars", "content"]